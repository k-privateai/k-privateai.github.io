---
const currentYear = new Date().getFullYear();

const quickLinks = [
  { title: "About", url: "/about/" },
  { title: "Activities", url: "/activities/" },
  { title: "Membership", url: "/membership/" },
  { title: "Committee", url: "/committee/" },
];

const resourceLinks = [
  { title: "Posts", url: "/posts/1/" },
  { title: "Tags", url: "/tags/" },
  { title: "Categories", url: "/categories/" },
  { title: "Board", url: "/board/" },
];
---

<footer class="footer-dark">
  <div class="container mx-auto px-4 py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12">
      <!-- Brand -->
      <div class="lg:col-span-1">
        <a href="/" class="flex items-center space-x-3 mb-6">
          <img
            src="/assets/images/k-on-pie.png"
            alt="K-PAI Logo"
            class="h-12 w-12"
          />
          <span class="text-2xl font-bold text-white">K-PAI</span>
        </a>
        <p class="text-gray-400 text-sm leading-relaxed mb-6">
          Silicon Valley Privacy-Preserving AI Forum.
          Advancing the future of AI with privacy, security, and ethics at the core.
        </p>
        <div class="flex space-x-4">
          <a
            href="https://github.com/k-privateai"
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center hover:bg-[var(--color-primary)] transition-colors"
            aria-label="GitHub"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
            </svg>
          </a>
          <a
            href="mailto:k.private.ai@gmail.com"
            class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center hover:bg-[var(--color-primary)] transition-colors"
            aria-label="Email"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </a>
          <a
            href="https://linkedin.com"
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center hover:bg-[var(--color-primary)] transition-colors"
            aria-label="LinkedIn"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-white font-semibold text-lg mb-6">Quick Links</h3>
        <ul class="space-y-4">
          {quickLinks.map((link) => (
            <li>
              <a href={link.url} class="text-gray-400 hover:text-white transition-colors text-sm">
                {link.title}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Resources -->
      <div>
        <h3 class="text-white font-semibold text-lg mb-6">Resources</h3>
        <ul class="space-y-4">
          {resourceLinks.map((link) => (
            <li>
              <a href={link.url} class="text-gray-400 hover:text-white transition-colors text-sm">
                {link.title}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Newsletter / Contact -->
      <div>
        <h3 class="text-white font-semibold text-lg mb-6">Stay Updated</h3>
        <p class="text-gray-400 text-sm mb-6">
          Join our community for the latest updates on privacy-preserving AI research and events.
        </p>
        <a
          href="/membership/"
          class="inline-flex items-center justify-center px-6 py-3 bg-[var(--color-primary)] text-white font-semibold rounded-full hover:bg-[var(--color-primary-dark)] transition-colors text-sm"
        >
          Join K-PAI
          <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
      </div>
    </div>

    <!-- Divider -->
    <div class="h-px bg-white/10 my-12"></div>

    <!-- Bottom -->
    <div class="flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-gray-500 text-sm">
        Â© {currentYear} K-PAI. All rights reserved.
      </p>
      <div class="flex items-center space-x-6 text-sm">
        <a href="/privacy/" class="text-gray-500 hover:text-white transition-colors">
          Privacy Policy
        </a>
        <a href="/terms/" class="text-gray-500 hover:text-white transition-colors">
          Terms of Service
        </a>
      </div>
    </div>
  </div>
</footer>
