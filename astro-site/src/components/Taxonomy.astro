---
interface Props {
  categories?: string[];
  tags?: string[];
}

const { categories = [], tags = [] } = Astro.props;
---

{
  (categories.length > 0 || tags.length > 0) && (
    <div class="flex flex-wrap gap-4 mt-6 pt-6 border-t">
      {categories.length > 0 && (
        <div class="flex flex-wrap items-center gap-2">
          <span class="text-sm font-semibold text-gray-700">Categories:</span>
          {categories.map((category) => (
            <a
              href={`/categories/${category}/`}
              class="inline-block px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm hover:bg-blue-200 transition-colors"
            >
              {category}
            </a>
          ))}
        </div>
      )}

      {tags.length > 0 && (
        <div class="flex flex-wrap items-center gap-2">
          <span class="text-sm font-semibold text-gray-700">Tags:</span>
          {tags.map((tag) => (
            <a
              href={`/tags/${tag}/`}
              class="inline-block px-3 py-1 bg-gray-200 text-gray-800 rounded-full text-sm hover:bg-gray-300 transition-colors"
            >
              #{tag}
            </a>
          ))}
        </div>
      )}
    </div>
  )
}
