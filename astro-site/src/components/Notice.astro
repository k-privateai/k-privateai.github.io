---
interface Props {
  type?: "warning" | "info" | "primary" | "success" | "danger";
}

const { type = "info" } = Astro.props;

const styles = {
  warning: "bg-yellow-50 border-yellow-400 text-yellow-900",
  info: "bg-blue-50 border-blue-400 text-blue-900",
  primary: "bg-purple-50 border-purple-400 text-purple-900",
  success: "bg-green-50 border-green-400 text-green-900",
  danger: "bg-red-50 border-red-400 text-red-900",
};
---

<div class={`border-l-4 p-4 mb-4 ${styles[type]}`}>
  <slot />
</div>
