---
interface Props {
  isHeroPage?: boolean;
}

const { isHeroPage = false } = Astro.props;
const currentPath = Astro.url.pathname;

function isActive(url: string): boolean {
  if (url === "/") return currentPath === "/";
  return currentPath.startsWith(url);
}
