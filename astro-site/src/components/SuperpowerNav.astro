{!isHeroPage && <div class="h-24"></div>}

<script>
  // Navigation scroll effect
  const nav = document.getElementById('main-nav');
  const navWrapper = document.getElementById('nav-wrapper');
  const isHeroPage = !navWrapper?.classList.contains('nav-light-mode');

  function updateNav() {
    if (window.scrollY > 50) {
      nav?.classList.add('nav-scrolled');
      if (!isHeroPage) {
        navWrapper?.classList.add('scrolled');
      }
    } else {
      nav?.classList.remove('nav-scrolled');
      if (!isHeroPage) {
        navWrapper?.classList.remove('scrolled');
      }
    }
  }

  window.addEventListener('scroll', updateNav);
  updateNav();

  // Mobile menu toggle
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');

  button?.addEventListener('click', () => {
    const expanded = button.getAttribute('aria-expanded') === 'true';
    button.setAttribute('aria-expanded', String(!expanded));
    menu?.classList.toggle('hidden');
  });

  // Mega Dropdown functionality
  const communityDropdown = document.getElementById('community-dropdown');
  const communityMegaMenu = document.getElementById('community-mega-menu');
  const contentDropdown = document.getElementById('content-dropdown');
  const contentMegaMenu = document.getElementById('content-mega-menu');

  let dropdownTimeout: ReturnType<typeof setTimeout>;

  function showDropdown(wrapper: Element | null, megaMenu: Element | null) {
    clearTimeout(dropdownTimeout);
    // Hide all other dropdowns
    document.querySelectorAll('.mega-dropdown').forEach(d => {
      d.classList.remove('active');
      d.classList.add('hidden');
    });
    document.querySelectorAll('.nav-dropdown-wrapper').forEach(w => {
      w.classList.remove('active');
    });
    // Show this dropdown
    wrapper?.classList.add('active');
    megaMenu?.classList.remove('hidden');
    setTimeout(() => megaMenu?.classList.add('active'), 10);
  }

  function hideAllDropdowns() {
    dropdownTimeout = setTimeout(() => {
      document.querySelectorAll('.mega-dropdown').forEach(d => {
        d.classList.remove('active');
        setTimeout(() => d.classList.add('hidden'), 300);
      });
      document.querySelectorAll('.nav-dropdown-wrapper').forEach(w => {
        w.classList.remove('active');
      });
    }, 150);
  }

  // Community dropdown events
  communityDropdown?.addEventListener('mouseenter', () => {
    showDropdown(communityDropdown, communityMegaMenu);
  });

  communityMegaMenu?.addEventListener('mouseenter', () => {
    clearTimeout(dropdownTimeout);
  });

  communityDropdown?.addEventListener('mouseleave', hideAllDropdowns);
  communityMegaMenu?.addEventListener('mouseleave', hideAllDropdowns);

  // Content dropdown events
  contentDropdown?.addEventListener('mouseenter', () => {
    showDropdown(contentDropdown, contentMegaMenu);
  });

  contentMegaMenu?.addEventListener('mouseenter', () => {
    clearTimeout(dropdownTimeout);
  });

  contentDropdown?.addEventListener('mouseleave', hideAllDropdowns);
  contentMegaMenu?.addEventListener('mouseleave', hideAllDropdowns);
</script>

<style>
